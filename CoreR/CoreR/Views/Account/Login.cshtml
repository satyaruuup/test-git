@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>CoreR | Log in</title>
    <!-- Tell the browser to be responsive to screen width -->
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
    <!-- Bootstrap 3.3.5 -->
    <link rel="stylesheet" href='@Url.Content("~/bootstrap/css/bootstrap.min.css")'>
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.4.0/css/font-awesome.min.css">
    <!-- Ionicons -->
    <link rel="stylesheet" href="https://code.ionicframework.com/ionicons/2.0.1/css/ionicons.min.css">
    <!-- Theme style -->
    <link href='@Url.Content("~/dist/css/AdminLTE.css")' rel="stylesheet" />
    <!-- iCheck -->
    <link rel="stylesheet" href='@Url.Content("~/plugins/iCheck/square/blue.css")'>

    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
        <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
        <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
</head>
<body class="hold-transition login-page">
    <div class="login-box">
        <div class="login-logo">
            <a href="~/index2.html"><b>Core</b>R</a>
        </div>
        <!-- /.login-logo -->
        <div class="login-box-body">
            <p class="login-box-msg">Sign in to start your session</p>
            <form action="~/index2.html" method="post">
                <div class="has-error">
                    <label class="control-label " id="ErEmail" for="inputError"></label>
                </div>
                <div class="form-group has-feedback">
                    <input type="email" class="form-control" id="Email" placeholder="Email">
                    <span class="glyphicon glyphicon-envelope form-control-feedback"></span>
                </div>
                <div class=" has-error">
                    <label class="control-label " id="ErPassword" for="inputError"></label>
                </div>
                <div class="form-group has-feedback">
                    <input type="password" class="form-control" id="Password" placeholder="Password">
                    <span class="glyphicon glyphicon-lock form-control-feedback"></span>
                </div>
                <div class="form-group" id="ErMsg">
                </div>
                <div class="row">
                    <div class="col-xs-8">
                        <div class="checkbox icheck">
                            <label>
                                <input type="checkbox">
                                Remember Me
                            </label>
                        </div>
                    </div>
                    <!-- /.col -->
                    <div class="col-xs-4">
                        <button type="submit" id="btnLogin" class="btn btn-primary btn-block btn-flat">Sign In</button>
                    </div>
                    <!-- /.col -->
                </div>
            </form>
            <a href="#">I forgot my password</a><br>
            <a href='@Url.Content("~/Account/Register")' class="text-center">Register a new ownership</a>

        </div>
        <!-- /.login-box-body -->
    </div>
    <!-- /.login-box -->
    <!-- jQuery 2.1.4 -->
    <script src='@Url.Content("~/plugins/jQuery/jQuery-2.1.4.min.js")'></script>
    <!-- Bootstrap 3.3.5 -->
    <script src='@Url.Content("~/bootstrap/js/bootstrap.min.js")'></script>
    <!-- iCheck -->
    <script src='@Url.Content("~/plugins/iCheck/icheck.min.js")'></script>

    <script src='@Url.Content("~/Scripts/Constants.js")'></script>
    <script src='@Url.Content("~/Scripts/SatyaValidator.js")'></script>
    <script>
        $(function () {
            $('input').iCheck({
                checkboxClass: 'icheckbox_square-blue',
                radioClass: 'iradio_square-blue',
                increaseArea: '20%' // optional
            });

            $('#btnLogin').click(function () {

                var errMsg = $('#ErMsg');

                if (!RequiredFieldTextBox("Email", "ErEmail", "Enter email!")) {
                    $('#Email').parent().removeClass("has-feedback").addClass("has-error");
                    return false;
                } else {
                    $('#Email').parent().removeClass("has-error").addClass("has-feedback");
                }

                if (!EmailValidation("Email", "ErEmail", "Enter valid email!")) {
                    $('#Email').parent().removeClass("has-feedback").addClass("has-error");
                    return false;
                } else {
                    $('#Email').parent().removeClass("has-error").addClass("has-feedback");
                }

                if (!RequiredFieldTextBox("Password", "ErPassword", "Enter password!")) {
                    $('#Password').parent().removeClass("has-feedback").addClass("has-error");
                    return false;
                } else {
                    $('#Password').parent().removeClass("has-error").addClass("has-feedback");

                }

                var data = { "email": $('#Email').val(), "password": $('#Password').val() };

                errMsg.html("Please wait...");
                errMsg.css("color", "#3057b2");
                errMsg.fadeIn(500);

                // Post data to server
                $.ajax({
                    type: "POST",
                    url: "/Account/Login",
                    async: true,
                    data: data,
                    success: function (response) {
                        if (response == OperationResponse.SERVER_ERROR) {
                            errMsg.html(OperationMessage.SERVER_ERROR);
                            errMsg.css("color", "#C53131");
                            errMsg.fadeIn(500);
                        }
                        else if (response == OperationResponse.SUCCESS) {
                            errMsg.html(OperationMessage.LOGIN_SUCCESS);
                            errMsg.css("color", "#308347");
                            errMsg.fadeIn(2000);

                            // After success full login redirect page to main site page
                            window.location.href = '@Url.Content("~/Home/Index")';
                        }
                        else if (response == OperationResponse.NOT_MATCH) {
                            errMsg.html(OperationMessage.PASSWORD_NOT_MATCH);
                            errMsg.css("color", "#C53131");
                            errMsg.fadeIn(500);

                        }
                        else if (response == OperationResponse.NOT_EXISTS) {
                            errMsg.html(OperationMessage.EMAIL_NOT_EXIST);
                            errMsg.css("color", "#C53131");
                            errMsg.fadeIn(500);
                        }
                    },
                    failure: function (response) {
                        errMsg.html(OperationMessage.SERVER_ERROR);
                        errMsg.css("color", "#C53131");
                        errMsg.fadeIn(500);
                    }
                });

                return false;
            });
        });
    </script>
</body>
</html>